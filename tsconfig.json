{
  "compilerOptions": {
    "module": "ES2020",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "moduleResolution": "nodenext",
    "target": "ES2020",
    "noUnusedLocals": true,
  },
  "include": ["*.ts"],
  "exclude": ["node_modules"]
}
